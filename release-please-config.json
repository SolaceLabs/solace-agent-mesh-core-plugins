{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "python",
  "include-component-in-tag": true,
  "include-v-in-tag": false,
  "separate-pull-requests": false,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "perf",
      "section": "Performance Improvements"
    },
    {
      "type": "deps",
      "section": "Dependencies"
    },
    {
      "type": "revert",
      "section": "Reverts"
    },
    {
      "type": "docs",
      "section": "Documentation"
    },
    {
      "type": "style",
      "section": "Styles",
      "hidden": true
    },
    {
      "type": "chore",
      "section": "Miscellaneous Chores",
      "hidden": true
    },
    {
      "type": "refactor",
      "section": "Code Refactoring",
      "hidden": true
    },
    {
      "type": "test",
      "section": "Tests",
      "hidden": true
    },
    {
      "type": "build",
      "section": "Build System",
      "hidden": true
    },
    {
      "type": "ci",
      "section": "Continuous Integration",
      "hidden": true
    }
  ],
  "group-pull-request-title-pattern": "chore: release ${branch}",
  "pull-request-header": ":robot: I have created a release *beep* *boop*",
  "packages": {
    "sam-bedrock-agent": {
      "package-name": "sam_bedrock_agent",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-event-mesh-agent": {
      "package-name": "sam_event_mesh_agent",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-event-mesh-gateway": {
      "package-name": "sam_event_mesh_gateway",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-event-mesh-tool": {
      "package-name": "sam_event_mesh_tool",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-geo-information": {
      "package-name": "sam_geo_information",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-mcp-server-gateway-adapter": {
      "package-name": "sam_mcp_server_gateway_adapter",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-mermaid": {
      "package-name": "sam_mermaid",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-mongodb": {
      "package-name": "sam_mongodb",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-nuclia-tool": {
      "package-name": "sam_nuclia_tool",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-rag": {
      "package-name": "sam_rag",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        "src/sam_rag/__init__.py"
      ]
    },
    "sam-rest-gateway": {
      "package-name": "sam_rest_gateway",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-ruleset-lookup-tool": {
      "package-name": "sam_ruleset_lookup_tool",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-slack": {
      "package-name": "sam_slack",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-slack-gateway-adapter": {
      "package-name": "sam_slack_gateway_adapter",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-sql-database": {
      "package-name": "sam_sql_database",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-sql-database-tool": {
      "package-name": "sam_sql_database_tool",
      "changelog-path": "CHANGELOG.md"
    },
    "sam-webhook-gateway": {
      "package-name": "sam_webhook_gateway",
      "changelog-path": "CHANGELOG.md"
    }
  }
}
